<h1>Folders</h1>

{{#if folders}}
  <table>
    <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
    </tr>
    </thead>
    <tbody>
    {{#each folders}}
      <tr>
        <td><a href="{{this.link}}">{{this.name}}</a></td>
        <td>{{this.description}}</td>
      </tr>
    {{/each}}
    </tbody>
  </table>
{{/if}}
